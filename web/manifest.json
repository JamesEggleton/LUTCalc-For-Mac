{
	"name": "LUTCalc",
	"description": "Camera LUT Generator / Analyser / Visualiser.",
	"version": "2.0.0.1",
	"manifest_version": 2,
	"minimum_chrome_version": "23",
	"app": {
		"background": {
			"scripts": [
				"background.js",
				"lutinputs.js",
				"splash.js",
				"tests.js",
				"lut.js",
				"ring.js",
				"lutmessage.js",
				"lut-cube.js",
				"lut-davinci.js",
				"lut-vlt.js",
				"lut-3dl.js",
				"lut-lut.js",
				"lut-spi1d.js",
				"lut-spi3d.js",
				"lut-ncp.js",
				"lut-la.js",
				"lutformats.js",
				"brent.js",
				"lutanalyst.js",
				"lutfile.js",
				"lutcamerabox.js",
				"lutgammabox.js",
				"twk-white.js",
				"twk-asccdl.js",
				"twk-psstcdl.js",
				"twk-hg.js",
				"twk-blkhi.js",
				"twk-fc.js",
				"twk-la.js",
				"luttweaksbox.js",
				"lutlutbox.js",
				"lutgeneratebox.js",
				"lutpreview.js",
				"lutinfobox.js",
				"lutcalc.js",
				"gamma.js",
				"colourspace.js"
			]
		}
	},
	"author": "Ben Turley",
	"icons": {
		"16": "/img/chrome16.png",
		"19": "/img/chrome19.png",
		"32": "/img/chrome32.png",
		"38": "/img/chrome38.png",
		"48": "/img/chrome48.png",
		"64": "/img/chrome64.png",
		"128": "/img/logo128.png",
		"256": "/img/logo256.png",
		"512": "/img/logo512.png"
	},
	"offline_enabled": true,
	"permissions": [
		"notifications",
		{ "fileSystem": ["write"] }
	],
	"file_handlers": {
		"any": {
			"extensions": [
				"cube",
				"lacube",
				"labin",
				"lutcalc"
			]
		} 
	}
}